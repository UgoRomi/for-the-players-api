{
  "name": "just_fight_api",
  "version": "0.1.0",
  "description": "Official REST API for the eSports app Just Fight",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/UgoRomi/just_fight_api"
  },
  "scripts": {
    "dev": "nodemon index.js",
    "doc": "apidoc -i . -o docs/ -e \"(node_modules|docs|models|migrations|knekfile.js)\"",
    "start": "node index.js",
    "migrate": "knex migrate:latest",
    "createMigration": "knex migrate:make"
  },
  "keywords": [],
  "author": "Ugo Romi",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^2.16.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "express-validator": "^6.6.1",
    "form-data": "^3.0.0",
    "got": "^11.8.0",
    "helmet": "^4.1.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "mongoose": "^5.10.11",
    "morgan": "^1.10.0",
    "swagger-ui-express": "^4.1.4",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2"
  },
  "apidoc": {
    "name": "Just Fight API",
    "version": "0.1.0",
    "description": "REST API for Just Fight, an italian eSports app",
    "apidoc": {
      "title": "Just Fight API",
      "url": "https://just-fight.herokuapp.com"
    },
    "template": {
      "forceLanguage": "en"
    }
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": true,
    "semi": false,
    "quoteProps": "consistent",
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "always"
  },
  "engines": {
    "node": "15.x"
  }
}
